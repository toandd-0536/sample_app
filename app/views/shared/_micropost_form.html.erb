<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("users._micropost_form.placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.views.microposts.type %>
  </span>
  <%= f.submit t("users._micropost_form.btn"), class: "btn btn-primary" %>
<% end %>
