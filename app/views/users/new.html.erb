<% provide :title, t("users.new.title") %>
<h1><%= t("users.new.new_name") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages", user:@user  %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("users.new.confirm_pass") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("users.new.btn"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
